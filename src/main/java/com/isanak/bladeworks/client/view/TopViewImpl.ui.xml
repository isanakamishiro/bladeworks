<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.header {
			text-align: center;
			text-shadow: 0 1px 3px rgba(255, 255, 255, .4), 0 0 30px
				rgba(255, 255, 255, .075);
		}
	</ui:style>

	<g:FlowPanel>
		<b:FluidContainer addStyleNames="{style.header}">
			<b:Hero>
				<b:Heading size="1" showOn="DESKTOP" subtext="I am Ben.">体はなめこで出来ている。</b:Heading>
				<b:Heading size="2" showOn="TABLET" subtext="I am Ben.">体はなめこで出来ている。</b:Heading>
				<b:Heading size="3" showOn="PHONE" subtext="I am Ben.">体はなめこで出来ている。</b:Heading>
				<b:Paragraph>別に、アレを倒してしまっても構わんのだろう？</b:Paragraph>
				<b:Button size="LARGE" type="PRIMARY" ui:field="bladeCreationButton1">倒すために武器を作ろう</b:Button>
			</b:Hero>
		</b:FluidContainer>

		<b:Container ui:field="container">
			<b:Row>
				<b:Column size="4">
					<b:Heading size="3">剣製</b:Heading>
					<b:Paragraph>体は剣で出来ているような気がするがどうやら気のせいだったようだ。</b:Paragraph>
					<b:Button ui:field="bladeCreationButton2" icon="DOUBLE_ANGLE_RIGHT"
						iconPosition="RIGHT">詳細</b:Button>
				</b:Column>
				<b:Column size="4">
					<b:Heading size="3">一覧</b:Heading>
					<b:Paragraph>おまえは今まで食ったパンの枚数をおぼえているのか？</b:Paragraph>
					<b:Button ui:field="bladeListButton" icon="DOUBLE_ANGLE_RIGHT"
						iconPosition="RIGHT">詳細</b:Button>
				</b:Column>
				<b:Column size="4">
					<b:Heading size="3">About</b:Heading>
					<b:Paragraph>「ページ分けする必要があるのか？」「さあ・・・」</b:Paragraph>
					<b:Button ui:field="AboutButton" icon="DOUBLE_ANGLE_RIGHT"
						iconPosition="RIGHT">詳細</b:Button>
				</b:Column>
			</b:Row>
		</b:Container>
	</g:FlowPanel>
</ui:UiBinder>
