<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.header {
			text-align: center; <!--
			text-shadow: 0 1px 3px rgba(255, 255, 255, .4), 0 0 30px -->   
						   <!--    				   rgba(255, 255, 255, .075); -->
			background: rgb(152, 190, 222); /* Old browsers */
			background: -moz-linear-gradient(-45deg, rgba(152, 190, 222, 1) 0%,
				rgba(222, 239, 255, 1) 100%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, right bottom, color-stop(0%, rgba(152
				, 190, 222, 1)), color-stop(100%, rgba(222, 239, 255, 1)));
			/* Chrome,Safari4+ */
			background: -webkit-linear-gradient(-45deg, rgba(152, 190, 222, 1) 0%,
				rgba(222, 239, 255, 1) 100%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(-45deg, rgba(152, 190, 222, 1) 0%,
				rgba(222, 239, 255, 1) 100%); /* Opera 11.10+ */
			background: -ms-linear-gradient(-45deg, rgba(152, 190, 222, 1) 0%,
				rgba(222, 239, 255, 1) 100%); /* IE10+ */
			background: linear-gradient(135deg, rgba(152, 190, 222, 1) 0%,
				rgba(222, 239, 255, 1) 100%); /* W3C */
			filter: progid:DXImageTransform.Microsoft.gradient(  startColorstr='#98bede',
				endColorstr='#deefff', GradientType=1);
			/* IE6-9 fallback on horizontal gradient */
		}
	</ui:style>

	<g:FlowPanel>
		<b:FluidContainer>
			<b:Hero addStyleNames="{style.header}">
				<b:Heading size="1" showOn="DESKTOP" subtext="I am Ben.">体はなめこで出来ている。</b:Heading>
				<b:Heading size="2" showOn="TABLET" subtext="I am Ben.">体はなめこで出来ている。</b:Heading>
				<b:Heading size="3" showOn="PHONE" subtext="I am Ben.">体はなめこで出来ている。</b:Heading>
				<b:Paragraph>別に、アレを倒してしまっても構わんのだろう？</b:Paragraph>
				<b:Button size="LARGE" type="PRIMARY" ui:field="bladeCreationButton1">武器を作ろう</b:Button>
			</b:Hero>
		</b:FluidContainer>

		<b:Container ui:field="container">
			<b:Row>
				<b:Column size="12">
					<b:Thumbnails>
						<b:Thumbnail size="4">
							<b:Caption>
								<b:Heading size="3" subtext="Blade Works">剣製</b:Heading>
								<hr />
								<b:Paragraph>
									体は剣で出来ているような気がするがどうやら気のせいだったようだ。メインコンテンツ。
								</b:Paragraph>
								<b:Button ui:field="bladeCreationButton2" icon="DOUBLE_ANGLE_RIGHT"
									iconPosition="RIGHT">詳細</b:Button>
							</b:Caption>
						</b:Thumbnail>
						<b:Thumbnail size="4">
							<b:Caption>
								<b:Heading size="3" subtext="Blade List">一覧</b:Heading>
								<hr />
								<b:Paragraph>
									おまえは今まで食ったパンの枚数をおぼえているのか？作成した剣の一覧。
								</b:Paragraph>
								<b:Button ui:field="bladeListButton" icon="DOUBLE_ANGLE_RIGHT"
									iconPosition="RIGHT">詳細</b:Button>
							</b:Caption>
						</b:Thumbnail>
						<b:Thumbnail size="4">
							<b:Caption>
								<b:Heading size="3" subtext="About">補足</b:Heading>
								<hr />
								<b:Paragraph>
									「ページ分けする必要があるのか？」「さあ・・・」雑記。
								</b:Paragraph>
								<br />
								<b:Button ui:field="AboutButton" icon="DOUBLE_ANGLE_RIGHT"
									iconPosition="RIGHT">詳細</b:Button>
							</b:Caption>
						</b:Thumbnail>

					</b:Thumbnails>
				</b:Column>
			</b:Row>
		</b:Container>
	</g:FlowPanel>
</ui:UiBinder>
